<h2>Books</h2>
<table frame="void", rules="none">
    <thead>
    	<tr>
    		<th>Title</th>
    		<th>Body</th>
    	</tr>
    </thead>
    <tbody>
    	<% @books.each do |book| %>
    	<tr>
    		<td class="title"><%= book.title %></td>
    		<td class="body"><%= book.body %></td>
    	</tr>
    	<% end %>
    </tbody>
</table>