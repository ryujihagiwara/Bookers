<h3>Books</h3>
<table frame="void", rules="none">
    <thead>
    	<tr>
    		<th>Title</th>
    		<th>Body</th>
            <th></th>
    	</tr>
    </thead>
    <tbody>
    	<% @books.each do |book| %>
    	<tr>
    		<td class="title"><%= book.title %></td>
    		<td class="body"><%= book.body %></td>
            <td>
                <%= link_to 'Show', book_path(book) %>
                <%= link_to 'Edit', edit_book_path(book) %>
                <%= link_to 'Destroy',book_path(book), method: :delete, 'data-confirm' => 'Are you sure?' %>
            </td>
    	</tr>
    	<% end %>
    </tbody>
</table>

<h3>New book</h3>



<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>


